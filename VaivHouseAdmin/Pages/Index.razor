@page "/"
@using System.Web
@using System.Collections.Specialized
@using VaivHouseAdmin.Service
@inject NavigationManager NavManager
@inject IPropertyService PropertyService

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

@code{
	protected override void OnInitialized()
	{
		NameValueCollection coll = HttpUtility.ParseQueryString(new Uri(NavManager.Uri).Query);
		PropertyService.SetProfile(coll["profile"] ?? "local");
		PropertyService.SetPropertiesByProfile(coll["profile"] ?? "local");
	}
}